{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "nim": {
      "command": "nimlsp",
      "filetypes": ["nim"],
      "trace.server": "verbose"
    }
  },
  "snippets.userSnippetsDirectory": "~/.config/nvim/snips",
  "rust-analyzer.checkOnSave.extraArgs": [ "--target-dir", "/scratch/rust-analyser" ]
}
